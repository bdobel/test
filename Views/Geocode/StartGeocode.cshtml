@{
    ViewBag.Title = "Geocoding";
}
@section scripts {
    <!--App script--to be packed into bundle-->
    <!--base app structure code-->
    <script src="@Url.Content("~/Scripts/ESRGC/Script.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/component.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Application/application.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Controller/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Model/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Store/base.js")" type="text/javascript"></script>
    <!--Custom app code-->
    <script src="@Url.Content("~/Geocode/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Geocode/app/controller/geocode.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Geocode/app/store/geocode.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Geocode/app/store/geocodeProgress.js")" type="text/javascript"></script>
    <!--Start up code-->
    <script type="text/javascript">
        $(function () {
            new ESRGC.App();
        });
    </script>
}
<h2>Geocode Data</h2>
<div class="row-fluid">
    <div class="well span12">
        <h4>Geocoding progress steps</h4>
        <ol>
            <li>
                Geocode addresses.
            </li>
            <li>
                Save data to database.
            </li>
        </ol>
    </div>
</div>
<div id="content">
    <div class="row-fluid">
        <div class="span12 well">
            <div id="statusControl">
                <p>Please click start button below to start the process.</p>
                <div class="control-group">
                    <button type="button" class="btn btn-primary" id="startGeocodeBtn">
                        Start geocoding <i class="icon-white icon-play"></i></button>
                    <a id="cancelBtn" class="btn hide" href="@Url.Action("CancelProcess")">Cancel</a>
                </div>
            </div>
            <div class="progress progress-striped active hide">
                <div class="bar" style="width: 0%;">
                </div>
            </div>
            <div id="progress">
            </div>
        </div>
    </div>
</div>
