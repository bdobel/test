@{
    ViewBag.Title = "UploadFile";
}
@section scripts{
    <!--App script--to be packed into bundle-->
    <!--base app structure code-->
    <script src="@Url.Content("~/Scripts/ESRGC/Script.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/component.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Application/application.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Controller/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Model/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ESRGC/Store/base.js")" type="text/javascript"></script>
    <!--Custom app code-->
    <script src="@Url.Content("~/Upload/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Upload/app/controller/upload.js")" type="text/javascript"></script>
    <!--Start up code-->
    <script type="text/javascript">
        $(function () {
            new ESRGC.App();
        });
    </script>
}
<h2>UploadFile</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="well span12">
        <h4>Upload data</h4>
        <form action="@Url.Action("UploadFile")" method="post" class="form-horizontal" enctype="multipart/form-data">
        @Html.ValidationSummary(true)
        <div class="control-group">
            <label class="control-label" for="previewCount" style="display: block;">
                Preview rows</label>
            <div class="controls">
                <select name="previewCount">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option>All</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Data file</label>
            <div class="controls">
                <div id="uploadDiv" class="btn btn-success upload-container">
                    <div><i class="icon-white icon-folder-open"></i> Browse</div>
                    <input type="file" name="dataInput" id="dataInput" class="file-input" />
                </div>
                
                <label class="label label-important">text file only (.txt)</label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <span class="alert alert-success" id="fileName">
                    No file selected.
                </span>
            </div>
        </div>
        <div class="form-actions">
            <input title="Upload" value="Upload" type="submit" class="btn btn-primary" />
        </div>
        </form>
    </div>
    </div>
</div>